@model List<Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a asp-controller="Product" asp-action="Create" class="btn btn-primary" style="float:right">Yeni Ekle</a>

<h3 class="text-center">Ürünler Listesi</h3>
<table class="table table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>Stok Adedi</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i + 1)</th>
                <td>@Model[i].ProductName</td>
                <td>@Model[i].UnitPrice</td>
                <td>@Model[i].Category.CategoryName</td>
                <td>@Model[i].UnitsInStock</td>
            </tr>
        }
    </tbody>
</table>
