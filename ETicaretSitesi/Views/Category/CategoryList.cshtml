@model List<Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Kategori Listeleme Sayfası</h3>
<a asp-controller="Category" asp-action="Create" class="btn btn-primary" style="float:right">Yeni Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i)</th>
                <td>@Model[i].CategoryName</td>
                <td>
                    <a class="big-icon" asp-controller="Category" asp-action="Edit" asp-route-id="@Model[i].Id"><i class="bi bi-pencil-square"></i></a>
                    <a class="big-icon margin-icon" asp-controller="Category" asp-action="Delete" asp-route-id="@Model[i].Id"><i class="bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>